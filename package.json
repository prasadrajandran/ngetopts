{
  "name": "@prasadrajandran/getopts",
  "version": "1.0.0-beta.1",
  "description": "POSIX/GNU compliant CLI argument parser",
  "keywords": [
    "command",
    "line",
    "interface",
    "validation",
    "posix",
    "gnu",
    "cli",
    "shell",
    "argument",
    "parser",
    "getopt",
    "argp",
    "argv"
  ],
  "homepage": "https://github.com/prasadrajandran/node-getopts#readme",
  "bugs": {
    "url": "https://github.com/prasadrajandran/node-getopts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prasadrajandran/node-getopts.git"
  },
  "license": "MIT",
  "author": "Prasad Rajandran",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "build-docs": "typedoc --readme none --name getopts --includeVersion ./src/interfaces/opt_map.ts ./src/interfaces/parsed_args.ts ./src/interfaces/schema.ts ./src/interfaces/settings.ts ./src/classes ./src/parse.ts",
    "lint": "eslint ./src",
    "prep-release": "./prep_release.sh",
    "prettier-fix": "npx prettier --write .",
    "test": "jest --silent",
    "watch": "npm run build -- -w"
  },
  "devDependencies": {
    "@prasadrajandran/strip-comments-cli": "^1.0.0-beta.1",
    "@tsconfig/node10": "^1.0.7",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.14.34",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-tsdoc": "^0.2.11",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "sort-package-json": "^1.49.0",
    "strip-comments": "^2.0.1",
    "typedoc": "^0.20.30",
    "typedoc-plugin-markdown": "^3.6.0",
    "typescript": "^4.2.3"
  }
}
